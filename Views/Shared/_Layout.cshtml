<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoreApp | @RenderSection("Title", true) </title>
</head>

<body>
    <header>
        Store App : Header
        <p>
            @RenderSection("Top", false)
        </p>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        Footer
        @RenderSection("Footer", false)

    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>